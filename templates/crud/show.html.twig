{% extends 'base.html.twig' %}

{% block title %}Promotion{% endblock %}

{% block body %}
    <h1>Promotion</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ promotion.id }}</td>
            </tr>
            <tr>
                <th>Discount</th>
                <td>{{ promotion.discount }}</td>
            </tr>
            <tr>
                <th>Code</th>
                <td>{{ promotion.code }}</td>
            </tr>
            <tr>
                <th>Startdate</th>
                <td>{{ promotion.startdate ? promotion.startdate|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Enddate</th>
                <td>{{ promotion.enddate ? promotion.enddate|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>IsCoupon</th>
                <td>{{ promotion.isCoupon ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('crud_index') }}">back to list</a>

    <a href="{{ path('crud_edit', {'id': promotion.id}) }}">edit</a>

    {{ include('crud/_delete_form.html.twig') }}
{% endblock %}
